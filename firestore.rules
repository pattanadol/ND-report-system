rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Helper function to check if user exists
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile, admins can read any profile
      allow read: if isAuthenticated() && 
        (request.auth.uid == userId || isAdmin());
      
      // Users can write to their own profile
      allow write: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow user creation for registration
      allow create: if isAuthenticated() && 
        (request.auth.uid == userId || 
         (!exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
          resource.data.isAdmin == false));
    }
    
    // Reports collection  
    match /reports/{reportId} {
      // Anyone logged in can read reports
      allow read: if isAuthenticated();
      
      // Anyone logged in can create reports
      allow create: if isAuthenticated();
      
      // Only admins can update reports (including status changes)
      // OR the person who created the report
      allow update: if isAuthenticated() && 
        (isAdmin() || 
         request.auth.uid == resource.data.createdBy ||
         request.auth.token.email == resource.data.contactEmail);
      
      // Only admins can delete reports
      // OR the person who created the report  
      allow delete: if isAuthenticated() && 
        (isAdmin() || 
         request.auth.uid == resource.data.createdBy ||
         request.auth.token.email == resource.data.contactEmail);
    }
  }
}